{
  "name": "somewheretowear",
  "version": "1.0.0",
  "description": "Nuxt.js project",
  "author": "David McCormick <d.mccormick@wellcome.ac.uk>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "generate:gh-pages": "DEPLOY_ENV=GH_PAGES nuxt generate",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "yarn lint",
    "test": "yarn lint && yarn test:unit && yarn test:integration",
    "test:unit": "jest --testPathIgnorePatterns=tests/.*.js",
    "test:integration": "jest --testPathIgnorePatterns=__tests__/.*.js",
    "test:watch": "yarn test:unit -- --watch",
    "yo": "yarn test && yarn generate && yarn deploy"
  },
  "dependencies": {
    "jsonp": "^0.2.1",
    "nuxt": "^1.0.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "node-sass": "^4.9.3",
    "push-dir": "^0.4.1",
    "sass-loader": "^7.1.0",
    "supertest": "^3.3.0",
    "vue-jest": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    }
  }
}
