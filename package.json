{
  "name": "somewheretowear",
  "version": "1.0.0",
  "description": "somewhere to wear dot com",
  "author": "David McCormick <davidpmccormick@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt --port 3333",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "yarn lint",
    "test": "yarn lint && yarn test:unit && yarn test:integration",
    "test:unit": "jest --testPathIgnorePatterns=tests/.*.js",
    "test:integration": "jest --testPathIgnorePatterns=__tests__/.*.js",
    "test:watch": "yarn test:unit -- --watch",
    "netlify:deploy": "yarn generate"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.4",
    "@sentry/browser": "4.2.3",
    "cookie-cutter": "^0.2.0",
    "jsonp": "^0.2.1",
    "nuxt": "^2.2.0",
    "prismic-dom": "^2.1.0",
    "prismic-javascript": "^1.5.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "glob-all": "^3.1.0",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "node-sass": "^4.9.3",
    "push-dir": "^0.4.1",
    "sass-loader": "^7.1.0",
    "supertest": "^3.3.0",
    "vue-jest": "^3.0.0",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "autoprefixer": "^9.3.1",
    "tailwindcss": "^0.6.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    }
  }
}
